@page
@model IndexModel
@{
    ViewData["Title"] = "Tenants";
}

<table class="table">
    <thead>
        <tr>
            <th scope="col">Name</th>
            <th scope="col">Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var organization in Model.Organizations)
        {
            <tr>
                <td>@organization.Name</td>
                <td>
                    <a class="btn btn-outline-secondary">
                        Edit
                    </a>
                    <a class="btn btn-outline-info">
                        Delete
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>